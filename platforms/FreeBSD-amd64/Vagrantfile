Vagrant.configure("2") do |config|
  config.vm.box = "generic/freebsd11"
  config.vm.network "private_network", ip: "192.168.50.2"
  config.env.enable
  config.vm.synced_folder ENV['SOURCE_CODE'], "/home/vagrant/source_code", create: true, type: "nfs"
  config.vm.synced_folder "../../output_bin/", "/home/vagrant/output_bin", create: true, type: "nfs"
  config.vm.provision :shell, path: "startup.sh", env: {"PROJECT_NAME" => ENV["PROJECT_NAME"]}
end
